#!/bin/sh
#
# Ganymede admin jar build script
#
# Version: $Revision: 1.9 $
# Date: $Date: 1999/01/20 23:51:40 $
#
############################################################

currentdir=`pwd`

# Change to the directory where this build script is

prog=$0
builddir=`echo $prog|sed 's%/[^/][^/]*$%%'`
test "x$builddir" = "x$builddir" && builddir=.
cd $builddir

# Load configuration information

. config.sh

# And do the build

echo "Building admin jar"

mv -f ganymedeAdmin.jar ganymedeAdmin.jar.old > /dev/null 2>&1

cd admin_classes

# We need the Util directory as well

cd arlut/csd
rm -f Util
ln -s $CLASSDIR/arlut/csd/Util .
cd ../..

# And the JDataComponent directory

cd arlut/csd
rm -f JDataComponent
ln -s $CLASSDIR/arlut/csd/JDataComponent JDataComponent
cd ../..

# And the JDialog directory

cd arlut/csd
rm -f JDialog
ln -s $CLASSDIR/arlut/csd/JDialog JDialog
cd ../..

# And the JTable directory

cd arlut/csd
rm -f JTable
ln -s $CLASSDIR/arlut/csd/JTable JTable
cd ../..

# And the JTree directory

cd arlut/csd
rm -f JTree
ln -s $CLASSDIR/arlut/csd/JTree JTree
cd ../..

./sync_tree

$JAVADIR/jar -cf ../ganymedeAdmin.jar arlut

cd ..

echo "Done building admin jar"

