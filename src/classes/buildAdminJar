#!/bin/sh
#
# Ganymede admin jar build script
#
# Version: $Revision: 1.2 $
# Date: $Date: 1999/01/19 23:58:19 $
#
############################################################

currentdir=`pwd`

# Change to the directory where this build script is

prog=$0
builddir=`echo $prog|sed 's%/[^/][^/]*$%%'`
test "x$builddir" = "x$builddir" && builddir=.
cd $builddir

# Load configuration information

. config.sh

# And do the build

echo "Building admin jar"

mv ganymedeAdmin.jar ganymedeAdmin.jar.old

cd admin_classes

./sync_tree

$JAVADIR/jar -cf ../ganymedeAdmin.jar arlut jdj

cd ..

echo "Done building admin jar"

